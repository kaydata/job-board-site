<div class="container mt-5">
  <div class="jumbotron text-center">
    <h1 class="display-4">Welcome to KAYJOBS</h1>
    <p class="lead">Get Started with Your Job Search Today</p>
    <hr class="my-4">
    <p>Find your dream job or post a job opening.</p>
    <%= link_to 'Browse Jobs', jobs_path, class: 'btn btn-primary btn-lg' %>
    <% if !user_signed_in? %>
      <%= link_to 'Add New Job', new_user_registration_path, class: 'btn btn-secondary btn-lg' %>
    <% end %>
  </div>
  <h2 class="text-center mb-4">Latest Job Listings</h2>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @jobs.each do |job| %>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= job.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= job.company %> - <%= job.location %></h6>
            <p class="card-text"><%= truncate(job.description, length: 100) %></p>
            <a href="<%= job.company_website %>" class="btn btn-primary" target="_blank">Apply</a>
            <a href="<%= job_path(job) %>" class="btn btn-secondary">Details</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

